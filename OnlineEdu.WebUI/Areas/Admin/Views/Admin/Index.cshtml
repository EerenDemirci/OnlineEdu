


@model List<ResultAboutDto>





@{
    ViewData["Title"] = "HAKKIMDA SAYFASI";
    Layout ="~/Views/Shared/_AdminLaylout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Resim1</th>
        <th>Resim2</th>
        <th>Acıklame</th>
        <th>Madde1</th>
        <th>Madde2</th>
        <th>Madde3 </th>
        <th>Madde4</th>
        <th></th>

    </tr>

    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl1" style="height:75px;width:75px" /></td>
            <td><img src="@item.ImageUrl1" style="height:75px;width:75px" /></td>
            <td>@item.Desciption</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Item4</td>
            <td>,
                <a asp-action="DeleteAbout" asp-controller="About" asp-asp-area="Admin" asp-route-id="@item.AboutId" class="btn btn-outline-info">Sil</a>
                <a asp-action="UpdateAbout" asp-controller="About" asp-asp-area="Admin" asp-route-id="@item.AboutId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
        
    }
</table>

<br />
<a asp-action="CreateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary">Yeni Hakkımızda Eklendi</a>